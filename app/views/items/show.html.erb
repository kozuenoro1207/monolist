<% content_for :head do %>
  <title><%= @item.title %> - Monolist</title>
  <meta property="keywords" content="Monolist,<%= @item.title %>" />
  <meta property="description" content="<%= @item.title %>に関する情報です。この商品を欲しい人、持ってる人を表示しています。">
<% end %>

<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #TODO 商品イメージ %>
          <% if @item.large_image.present? %>
              <%= image_tag(@item.large_image , alt: @item.title) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: @item.title) %>
          <% end %>
        </div>
      </div>
      <div class="title">
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% @item_haves_users.each do |haves_user| %>
            <span id ="haves-<%= haves_user.id %>">
            <span class="have_user"><%= link_to gravatar_for(haves_user, size: 30), haves_user %></span>
            </span>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
            <% @item_wants_users.each do |wants_user| %>
            <span id ="wants-<%= wants_user.id %>">
            <span class="want_user"><%= link_to gravatar_for(wants_user,size:30), wants_user %></span>
            </span>
            <% end %>
          </span>
        </div>
      </div>
      <div class="text-center">
        <%= link_to(image_tag("amazon-button.png", {alt: "Amazon詳細ページへ"}), @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>
